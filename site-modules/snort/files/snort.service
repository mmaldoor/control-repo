[Unit]
Description=Snort NIDS Daemon
After=syslog.target network.target

[Service]
Type=simple
ExecStart=/usr/sbin/snort -q -A fast -c /etc/snort/snort.conf -l /var/log/snort/ -h 192.168.180.0/24

[Install]
WantedBy=multi-user.target

